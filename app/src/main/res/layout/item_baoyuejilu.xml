<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="29pt"
            android:layout_marginBottom="10pt"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="22pt"
                android:layout_height="30pt"
                android:layout_marginRight="10pt"
                android:src="@mipmap/icon_weizhi" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="哈尔滨道里区112号11"
                android:textColor="@color/color_2"
                android:textSize="27pt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="29pt"
            android:layout_marginBottom="20pt"
            android:background="@drawable/bg_white_shadow"
            android:orientation="vertical"
            android:paddingVertical="19pt">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="42pt"
                    android:layout_height="42pt"
                    android:layout_marginLeft="11pt"
                    android:src="@mipmap/guizi" />

                <TextView
                    android:id="@+id/tv_guizi_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="64pt"
                    android:includeFontPadding="false"
                    android:text="柜子名称"
                    android:textColor="@color/color_2"
                    android:textSize="35pt"
                    android:textStyle="bold" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="64pt"
                android:layout_marginTop="10pt"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="箱子名称："
                    android:textColor="@color/color_2"
                    android:textSize="27pt" />

                <TextView
                    android:id="@+id/tv_box_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="箱子"
                    android:textColor="@color/color_8"
                    android:textSize="27pt" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="64pt"
                android:layout_marginTop="10pt"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="箱子类型："
                    android:textColor="@color/color_2"
                    android:textSize="27pt" />

                <TextView
                    android:id="@+id/tv_type_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="标准箱"
                    android:textColor="@color/color_8"
                    android:textSize="27pt" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="64pt"
                android:layout_marginTop="10pt"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="用户手机号："
                    android:textColor="@color/color_2"
                    android:textSize="27pt" />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="15112341234"
                    android:textColor="@color/color_8"
                    android:textSize="27pt" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="64pt"
                android:layout_marginTop="10pt"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="总支付金额："
                    android:textColor="@color/color_2"
                    android:textSize="27pt" />

                <TextView
                    android:id="@+id/tv_zong_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="1.00"
                    android:textColor="@color/color_8"
                    android:textSize="27pt" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="64pt"
                android:layout_marginTop="10pt"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="包月金额："
                    android:textColor="@color/color_2"
                    android:textSize="27pt" />

                <TextView
                    android:id="@+id/tv_baoyue_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="1.00"
                    android:textColor="@color/color_8"
                    android:textSize="27pt" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="64pt"
                android:layout_marginTop="10pt"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="支付时间："
                    android:textColor="@color/color_2"
                    android:textSize="27pt" />

                <TextView
                    android:id="@+id/tv_pay_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="2021-09-05 15：52：41"
                    android:textColor="@color/color_8"
                    android:textSize="27pt" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="64pt"
                android:layout_marginTop="10pt"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="购买方式："
                    android:textColor="@color/color_2"
                    android:textSize="27pt" />

                <TextView
                    android:id="@+id/tv_goumai_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="续费"
                    android:textColor="@color/color_8"
                    android:textSize="27pt" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
