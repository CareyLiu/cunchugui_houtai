<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36pt"
            android:layout_marginTop="28pt"
            android:layout_marginBottom="22pt"
            android:includeFontPadding="false"
            android:text="收费方式"
            android:textColor="@color/color_3"
            android:textSize="35pt"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58pt"
            android:gravity="center_vertical"
            android:paddingHorizontal="36pt">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="18pt"
                android:includeFontPadding="false"
                android:text="小箱："
                android:textColor="@color/black"
                android:textSize="27pt" />

            <EditText
                android:id="@+id/ed_xiangzi_name"
                android:layout_width="match_parent"
                android:layout_height="58pt"
                android:background="@drawable/bg_search"
                android:gravity="center_vertical"
                android:paddingLeft="100pt"
                android:text="柜子名称"
                android:textColor="@color/black"
                android:textSize="27pt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58pt"
            android:layout_marginTop="22pt"
            android:gravity="center_vertical"
            android:paddingHorizontal="36pt">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="18pt"
                android:includeFontPadding="false"
                android:text="箱子尺寸："
                android:textColor="@color/black"
                android:textSize="27pt" />

            <EditText
                android:id="@+id/ed_xiangzi_chicun"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_search"
                android:gravity="center_vertical"
                android:paddingLeft="100pt"
                android:text="30*30*30"
                android:textColor="@color/black"
                android:textSize="27pt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58pt"
            android:layout_marginTop="22pt"
            android:gravity="center_vertical"
            android:paddingHorizontal="36pt">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="18pt"
                android:includeFontPadding="false"
                android:text="锁地址：　"
                android:textColor="@color/black"
                android:textSize="27pt" />

            <EditText
                android:id="@+id/ed_xiangzi_suodizhi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_search"
                android:gravity="center_vertical"
                android:paddingLeft="100pt"
                android:text="0101"
                android:textColor="@color/black"
                android:textSize="27pt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58pt"
            android:layout_marginTop="22pt"
            android:gravity="center_vertical"
            android:paddingHorizontal="36pt">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="18pt"
                android:includeFontPadding="false"
                android:text="箱子类型："
                android:textColor="@color/black"
                android:textSize="27pt" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_search">

                <Spinner
                    android:id="@+id/sp_xiangzi_leixing"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="5pt"
                    android:paddingVertical="2pt"
                    android:spinnerMode="dropdown" />

                <ImageView
                    android:layout_width="28pt"
                    android:layout_height="28pt"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="18pt"
                    android:scaleType="fitXY"
                    android:src="@mipmap/down_black" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58pt"
            android:layout_marginTop="22pt"
            android:gravity="center_vertical"
            android:paddingHorizontal="36pt">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="18pt"
                android:includeFontPadding="false"
                android:text="禁用状态："
                android:textColor="@color/black"
                android:textSize="27pt" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_search">

                <Spinner
                    android:id="@+id/sp_xiangzi_state"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="5pt"
                    android:paddingVertical="2pt"
                    android:spinnerMode="dropdown" />

                <ImageView
                    android:layout_width="28pt"
                    android:layout_height="28pt"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="18pt"
                    android:scaleType="fitXY"
                    android:src="@mipmap/down_black" />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/bt_confirm"
            android:layout_width="match_parent"
            android:layout_height="84pt"
            android:layout_marginHorizontal="29pt"
            android:layout_marginTop="36pt"
            android:background="@drawable/btn_confirm"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="35pt" />

        <TextView
            android:id="@+id/bt_cancel"
            android:layout_width="match_parent"
            android:layout_height="84pt"
            android:layout_marginHorizontal="29pt"
            android:layout_marginTop="19pt"
            android:layout_marginBottom="20pt"
            android:background="@drawable/btn_cancel"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/black"
            android:textSize="35pt" />
    </LinearLayout>
</LinearLayout>