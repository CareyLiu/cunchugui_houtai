<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="29pt"
        android:layout_marginBottom="19pt"
        android:background="@drawable/bg_white_shadow"
        android:orientation="vertical"
        android:padding="19pt">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10pt"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="策略名称："
                android:textColor="@color/color_2"
                android:textSize="27pt" />

            <TextView
                android:id="@+id/tv_celue_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="收费策略"
                android:textColor="@color/color_8"
                android:textSize="27pt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10pt"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="创建时间："
                android:textColor="@color/color_2"
                android:textSize="27pt" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="2021-10-15 09：36：52"
                android:textColor="@color/color_8"
                android:textSize="27pt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10pt"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_shoufei_type_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="收费类型："
                android:textColor="@color/color_2"
                android:textSize="27pt" />

            <TextView
                android:id="@+id/tv_type_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="按时间计费"
                android:textColor="@color/color_8"
                android:textSize="27pt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10pt"
            android:gravity="top">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="已绑定柜子："
                android:textColor="@color/color_2"
                android:textSize="27pt" />

            <TextView
                android:id="@+id/tv_bangding_guizi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50pt"
                android:includeFontPadding="false"
                android:text="柜子柜子柜子柜子柜子柜子柜子柜子柜子"
                android:textColor="@color/color_8"
                android:textSize="27pt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15pt"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/bt_xiangzixiugai"
                android:layout_width="144pt"
                android:layout_height="58pt"
                android:layout_marginRight="19pt"
                android:background="@drawable/bt_list_xiugai"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="查看/修改"
                android:textColor="@color/color_blue"
                android:textSize="27pt" />

            <TextView
                android:id="@+id/bt_xiangzixiangqing"
                android:layout_width="144pt"
                android:layout_height="58pt"
                android:background="@drawable/bt_list_delete"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="删除"
                android:textColor="@color/color_red"
                android:textSize="27pt" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
