<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_app"
    android:orientation="vertical">

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/smartRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_app">

        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:srlTextSizeTime="10sp"
            app:srlTextSizeTitle="12sp" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48pt"
                    android:gravity="center_vertical"
                    android:paddingLeft="29pt">

                    <View
                        android:layout_width="4pt"
                        android:layout_height="25pt"
                        android:layout_marginRight="10pt"
                        android:background="#0062DC" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:includeFontPadding="false"
                        android:text="收益概况"
                        android:textColor="@color/black"
                        android:textSize="27pt" />

                    <TextView
                        android:id="@+id/bt_tongjishijian"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingHorizontal="29pt"
                        android:text="设置统计时间"
                        android:textColor="#0062DC"
                        android:textSize="19pt" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="200pt"
                    android:layout_marginHorizontal="29pt"
                    android:background="@drawable/bg_white_shadow" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48pt"
                    android:layout_marginTop="12pt"
                    android:gravity="center_vertical"
                    android:paddingLeft="29pt">

                    <View
                        android:layout_width="4pt"
                        android:layout_height="25pt"
                        android:layout_marginRight="10pt"
                        android:background="#0062DC" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:includeFontPadding="false"
                        android:text="我的收益"
                        android:textColor="@color/black"
                        android:textSize="27pt" />

                    <TextView
                        android:id="@+id/bt_shanxuanshijian"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingHorizontal="29pt"
                        android:text="设置筛选时间"
                        android:textColor="#0062DC"
                        android:textSize="19pt" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="77pt"
                    android:layout_marginHorizontal="29pt"
                    android:background="@drawable/bg_search"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="38pt"
                        android:layout_height="38pt"
                        android:layout_marginLeft="40pt"
                        android:scaleType="fitXY"
                        android:src="@mipmap/sousuo" />

                    <EditText
                        android:id="@+id/ed_search"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="搜索用户手机号"
                        android:imeOptions="actionSearch"
                        android:inputType="text"
                        android:paddingLeft="12pt"
                        android:textColor="@color/color_3"
                        android:textColorHint="#BEBEBE"
                        android:textSize="29pt" />

                    <ImageView
                        android:id="@+id/iv_quxiao"
                        android:layout_width="76pt"
                        android:layout_height="76pt"
                        android:padding="19pt"
                        android:src="@mipmap/guanbi"
                        android:visibility="gone" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="71pt"
                    android:layout_marginHorizontal="29pt"
                    android:layout_marginVertical="10pt">

                    <TextView
                        android:id="@+id/bt_jinyinian"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/bt_zu_left_sel"
                        android:gravity="center"
                        android:text="近一年"
                        android:textColor="@color/white"
                        android:textSize="27pt" />

                    <TextView
                        android:id="@+id/bt_jinliugeyue"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/bt_zu_center"
                        android:gravity="center"
                        android:text="近六个月"
                        android:textColor="@color/color_3"
                        android:textSize="27pt" />

                    <TextView
                        android:id="@+id/bt_jinsangeyue"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/bt_zu_right"
                        android:gravity="center"
                        android:text="近三个月"
                        android:textColor="@color/color_3"
                        android:textSize="27pt" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="40pt" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srlTextSizeTime="10sp"
            app:srlTextSizeTitle="12sp" />
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>
