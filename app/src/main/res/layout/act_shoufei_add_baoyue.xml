<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_app"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="29pt"
        android:layout_marginTop="19pt"
        android:background="@drawable/bg_white_shadow"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58pt"
            android:layout_marginTop="19pt"
            android:gravity="center_vertical"
            android:paddingHorizontal="36pt">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="18pt"
                android:includeFontPadding="false"
                android:text="包月策略名称："
                android:textColor="@color/black"
                android:textSize="27pt" />

            <EditText
                android:id="@+id/ed_name"
                android:layout_width="match_parent"
                android:layout_height="58pt"
                android:background="@drawable/bg_search"
                android:gravity="center_vertical"
                android:hint="请输入包月策略名称"
                android:inputType="text"
                android:paddingLeft="20pt"
                android:textColor="@color/black"
                android:textSize="27pt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58pt"
            android:layout_marginTop="22pt"
            android:gravity="center_vertical"
            android:paddingHorizontal="36pt"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="18pt"
                android:includeFontPadding="false"
                android:text="管理员电话："
                android:textColor="@color/black"
                android:textSize="27pt" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_search"
                android:gravity="center_vertical"
                android:hint="请输入管理员电话"
                android:inputType="number"
                android:paddingLeft="20pt"
                android:textColor="@color/black"
                android:textSize="27pt" />
        </LinearLayout>

        <TextView
            android:id="@+id/bt_confirm"
            android:layout_width="match_parent"
            android:layout_height="84pt"
            android:layout_marginHorizontal="29pt"
            android:layout_marginTop="36pt"
            android:background="@drawable/btn_confirm"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="35pt" />

        <TextView
            android:id="@+id/bt_cancel"
            android:layout_width="match_parent"
            android:layout_height="84pt"
            android:layout_marginHorizontal="29pt"
            android:layout_marginTop="19pt"
            android:layout_marginBottom="20pt"
            android:background="@drawable/btn_cancel"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/black"
            android:textSize="35pt" />
    </LinearLayout>
</LinearLayout>
