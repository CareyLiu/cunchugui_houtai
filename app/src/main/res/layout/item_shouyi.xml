<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="29pt"
            android:layout_marginBottom="20pt"
            android:background="@drawable/bg_white_shadow"
            android:orientation="vertical"
            android:paddingVertical="19pt">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="42pt"
                    android:layout_height="42pt"
                    android:layout_marginLeft="11pt"
                    android:src="@mipmap/yonghushoujihao" />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="64pt"
                    android:includeFontPadding="false"
                    android:text="用户手机号:2019040515698"
                    android:textColor="@color/color_2"
                    android:textSize="35pt"
                    android:textStyle="bold" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="64pt"
                android:layout_marginTop="10pt"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="消费时间："
                    android:textColor="@color/color_2"
                    android:textSize="27pt" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="2021-05-25  15：15：52"
                    android:textColor="@color/color_8"
                    android:textSize="27pt" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="64pt"
                android:layout_marginTop="10pt"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="消费金额："
                    android:textColor="@color/color_2"
                    android:textSize="27pt" />

                <TextView
                    android:id="@+id/tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="0.01"
                    android:textColor="@color/color_8"
                    android:textSize="27pt" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="64pt"
                android:layout_marginTop="10pt"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="支付状态："
                    android:textColor="@color/color_2"
                    android:textSize="27pt" />

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="15112345678"
                    android:textColor="@color/color_8"
                    android:textSize="27pt" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
