<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36pt"
            android:layout_marginTop="28pt"
            android:layout_marginBottom="22pt"
            android:includeFontPadding="false"
            android:text="修改"
            android:textColor="@color/color_3"
            android:textSize="35pt"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58pt"
            android:gravity="center_vertical"
            android:paddingHorizontal="36pt">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="18pt"
                android:includeFontPadding="false"
                android:text="柜子名称："
                android:textColor="@color/black"
                android:textSize="27pt" />

            <EditText
                android:id="@+id/ed_guizi_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_search"
                android:gravity="center_vertical"
                android:paddingLeft="100pt"
                android:text="柜子名称"
                android:textColor="@color/black"
                android:textSize="27pt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58pt"
            android:layout_marginTop="22pt"
            android:gravity="center_vertical"
            android:paddingHorizontal="36pt">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="18pt"
                android:includeFontPadding="false"
                android:text="柜子地址："
                android:textColor="@color/black"
                android:textSize="27pt" />

            <EditText
                android:id="@+id/ed_guizi_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_search"
                android:gravity="center_vertical"
                android:paddingLeft="100pt"
                android:text="柜子地址"
                android:textColor="@color/black"
                android:textSize="27pt" />
        </LinearLayout>

        <TextView
            android:id="@+id/bt_confirm"
            android:layout_width="match_parent"
            android:layout_height="84pt"
            android:layout_marginHorizontal="29pt"
            android:layout_marginTop="36pt"
            android:background="@drawable/btn_confirm"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="35pt" />

        <TextView
            android:id="@+id/bt_cancel"
            android:layout_width="match_parent"
            android:layout_height="84pt"
            android:layout_marginHorizontal="29pt"
            android:layout_marginTop="19pt"
            android:layout_marginBottom="20pt"
            android:background="@drawable/btn_cancel"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/black"
            android:textSize="35pt" />
    </LinearLayout>
</LinearLayout>