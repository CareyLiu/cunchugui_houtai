<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bt_chongzhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:includeFontPadding="false"
            android:paddingHorizontal="36pt"
            android:paddingTop="28pt"
            android:paddingBottom="22pt"
            android:text="重置"
            android:textColor="@color/color_red"
            android:textSize="35pt"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72pt"
            android:paddingHorizontal="29pt">

            <TextView
                android:id="@+id/tv_time_start"
                android:layout_width="288pt"
                android:layout_height="match_parent"
                android:background="@drawable/bg_search"
                android:gravity="center_vertical"
                android:hint="开始时间"
                android:paddingLeft="100pt"
                android:textColor="@color/color_9"
                android:textColorHint="@color/color_9"
                android:textSize="27pt" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="至"
                android:textColor="@color/color_3"
                android:textSize="27pt" />

            <TextView
                android:id="@+id/tv_time_end"
                android:layout_width="288pt"
                android:layout_height="match_parent"
                android:background="@drawable/bg_search"
                android:gravity="center_vertical"
                android:hint="结束时间"
                android:paddingLeft="100pt"
                android:textColor="@color/color_9"
                android:textColorHint="@color/color_9"
                android:textSize="27pt" />
        </LinearLayout>

        <DatePicker
            android:id="@+id/datePickerView"
            style="@style/ZZBDatePickerDialogLStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:calendarViewShown="false"
            android:datePickerMode="spinner"
            android:spinnersShown="true" />

        <TextView
            android:id="@+id/bt_confirm"
            android:layout_width="match_parent"
            android:layout_height="84pt"
            android:layout_marginHorizontal="29pt"
            android:layout_marginTop="36pt"
            android:background="@drawable/btn_confirm"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="35pt" />

        <TextView
            android:id="@+id/bt_cancel"
            android:layout_width="match_parent"
            android:layout_height="84pt"
            android:layout_marginHorizontal="29pt"
            android:layout_marginTop="19pt"
            android:layout_marginBottom="20pt"
            android:background="@drawable/btn_cancel"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/black"
            android:textSize="35pt" />
    </LinearLayout>
</LinearLayout>