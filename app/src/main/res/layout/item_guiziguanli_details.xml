<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="29pt"
        android:layout_marginBottom="19pt"
        android:background="@drawable/bg_white_shadow"
        android:orientation="vertical"
        android:padding="19pt">

        <TextView
            android:id="@+id/device_ccid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="设备编号：aaaaaaaaaaaa000010150018"
            android:textColor="@color/color_2"
            android:textSize="27pt"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10pt"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="箱子名称："
                android:textColor="@color/color_2"
                android:textSize="27pt" />

            <TextView
                android:id="@+id/device_box_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="1号箱子"
                android:textColor="@color/color_8"
                android:textSize="27pt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10pt"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="锁地址："
                android:textColor="@color/color_2"
                android:textSize="27pt" />

            <TextView
                android:id="@+id/device_box_lock_addr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="0101"
                android:textColor="@color/color_8"
                android:textSize="27pt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10pt"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="箱子尺寸："
                android:textColor="@color/color_2"
                android:textSize="27pt" />

            <TextView
                android:id="@+id/device_box_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="30*30*30"
                android:textColor="@color/color_8"
                android:textSize="27pt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10pt"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="箱子类型："
                android:textColor="@color/color_2"
                android:textSize="27pt" />

            <TextView
                android:id="@+id/device_box_type_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="标准箱"
                android:textColor="@color/color_8"
                android:textSize="27pt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10pt"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="禁用状态："
                android:textColor="@color/color_2"
                android:textSize="27pt" />

            <TextView
                android:id="@+id/device_box_state_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="正常"
                android:textColor="@color/color_8"
                android:textSize="27pt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10pt"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="使用状态："
                android:textColor="@color/color_2"
                android:textSize="27pt" />

            <TextView
                android:id="@+id/device_box_use_state_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="空闲中"
                android:textColor="@color/color_8"
                android:textSize="27pt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15pt"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/bt_xiangzixiugai"
                android:layout_width="144pt"
                android:layout_height="58pt"
                android:layout_marginRight="19pt"
                android:background="@drawable/bt_list_xiugai"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="修改"
                android:textColor="@color/color_blue"
                android:textSize="27pt" />

            <TextView
                android:id="@+id/bt_xiangzixiangqing"
                android:layout_width="144pt"
                android:layout_height="58pt"
                android:background="@drawable/bt_list_delete"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="删除"
                android:textColor="@color/color_red"
                android:textSize="27pt" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
